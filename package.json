{
  "name": "chatgpt-twitter-bot",
  "version": "0.1.0",
  "private": true,
  "description": "Twitter bot powered by OpenAI's ChatGPT.",
  "author": "Travis Fischer <travis@transitivebullsh.it>",
  "repository": "transitive-bullshit/chatgpt-twitter-bot",
  "license": "MIT",
  "type": "module",
  "source": "./src/index.ts",
  "types": "./build/index.d.ts",
  "exports": {
    "import": "./build/index.js",
    "types": "./build/index.d.ts",
    "default": "./build/index.js"
  },
  "files": [
    "build"
  ],
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "del build",
    "prebuild": "run-s clean",
    "predev": "run-s clean",
    "pretest": "run-s build",
    "docs": "typedoc",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "test": "run-p test:*",
    "test:prettier": "prettier '**/*.{js,jsx,ts,tsx}' --check"
  },
  "dependencies": {
    "@keyv/redis": "^2.5.4",
    "chatgpt": "^5.1.1",
    "conf": "^10.2.0",
    "dotenv-safe": "^8.2.0",
    "execa": "^6.1.0",
    "fast-json-stable-stringify": "^2.1.0",
    "got": "^12.5.3",
    "highlight.js": "^11.7.0",
    "huggingface": "^1.3.0",
    "ioredis": "^5.2.4",
    "keyv": "^4.5.2",
    "markdown-it": "^13.0.1",
    "openai": "^3.1.0",
    "p-map": "^5.5.0",
    "p-memoize": "^7.1.1",
    "p-throttle": "^5.0.0",
    "p-timeout": "^6.0.0",
    "puppeteer": "^19.4.1",
    "puppeteer-render-text": "^2.1.3",
    "quick-lru": "^6.1.1",
    "random": "^4.1.0",
    "remark": "^14.0.2",
    "rmfr": "^2.0.0",
    "sorted-btree": "^1.8.1",
    "strip-markdown": "^5.0.0",
    "tempy": "^3.0.0",
    "twitter-api-sdk": "^1.2.1",
    "twitter-api-v2": "^1.12.9",
    "undici": "^5.21.0",
    "url-regex": "^5.0.0"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.0.0",
    "@types/node": "^18.11.17",
    "@types/rmfr": "^2.0.1",
    "ava": "^5.1.0",
    "del-cli": "^5.0.0",
    "delay": "^5.0.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "mkdirp": "^1.0.4",
    "npm-run-all": "^4.1.5",
    "ora": "^6.1.2",
    "prettier": "^2.8.1",
    "tsup": "^6.5.0",
    "tsx": "^3.12.1",
    "type-fest": "^3.4.0",
    "typedoc": "^0.23.22",
    "typedoc-plugin-markdown": "^3.14.0",
    "typescript": "^4.9.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write"
    ]
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader=tsx"
    ]
  },
  "keywords": [
    "openai",
    "chatgpt",
    "twitter bot",
    "twitter",
    "gpt",
    "gpt3",
    "gpt4",
    "chatbot",
    "chat",
    "machine learning",
    "conversation",
    "conversational ai",
    "ai",
    "ml",
    "bot"
  ]
}
